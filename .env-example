# Give your application a unique name (no spaces)
APP_NAME=RacoonApp

# false for production, true for development
DEBUG=true

# the port should we listen on
PORT=4000

# the server name, e.g, www.mysite.com
SERVER_NAME=localhost

# should we use https?
SECURE=false

# postgres database config
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASS=password
DATABASE_NAME=RacoonApp
DATABASE_SSL_MODE=disable

# redis database config
REDIS_HOST="localhost:6379"
REDIS_PASSWORD=
REDIS_PREFIX=RacoonApp

# cache redis or badger
CACHE=badger

# cooking seetings: name, minutes, bool, bool, name
COOKIE_NAME=RacoonApp
COOKIE_LIFETIME=1440
COOKIE_PERSIST=true
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# session store: cookie, redis, badger, postgres
SESSION_TYPE=badger

